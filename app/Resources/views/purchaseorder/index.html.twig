{% extends 'base.html.twig' %}

{% block body %}
    <h1>PurchaseOrder list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Status</th>
                <th>Isgrn</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for purchaseOrder in purchaseOrders %}
            <tr>
                <td>{{ purchaseOrder.id }}</td>
                <td><a href="{{ path('purchaseorder_show', { 'id': purchaseOrder.id }) }}">{{ purchaseOrder.placeAt }}</a></td>
                <td>{% if purchaseOrder.status %}Yes{% else %}No{% endif %}</td>
                <td>{% if purchaseOrder.isGrn %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('purchaseorder_show', { 'id': purchaseOrder.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('purchaseorder_edit', { 'id': purchaseOrder.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('purchaseorder_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
