{% extends 'base.html.twig' %}

{% block body %}
    <h1>Supplier</h1>

    <table>
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ supplier.id }}</td>
        </tr>
            <tr>
                <th>Code</th>
                <td>{{ supplier.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ supplier.name }}</td>
            </tr>
            <tr>
                <th>Contactno</th>
                <td>{{ supplier.contactNo }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if supplier.status %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ supplier.address }}</td>
            </tr>

        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('supplier_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('supplier_edit', { 'id': supplier.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
