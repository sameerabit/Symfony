{% extends 'base.html.twig' %}

{% block body %}
    <h1>Bank</h1>

    <table class="table-bordered">
        <tbody>
        <tr>
            <th>Id</th>
            <td>{{ bank.id }}</td>
        </tr>
            <tr>
                <th>Name</th>
                <td>{{ bank.name }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if bank.status %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Accno</th>
                <td>{{ bank.accno }}</td>
            </tr>

        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bank_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bank_edit', { 'id': bank.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
