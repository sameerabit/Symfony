{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pump</h1>

    <table>
        <tbody>
            <tr>
                <th>Serialno</th>
                <td>{{ pump.serialNo }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ pump.name }}</td>
            </tr>
            <tr>
                <th>Resetvalue</th>
                <td>{{ pump.resetValue }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{% if pump.status %}Yes{% else %}No{% endif %}</td>
            </tr>
            <tr>
                <th>Id</th>
                <td>{{ pump.id }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('pump_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('pump_edit', { 'id': pump.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
